<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-xs-3">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <p>E-mail:<%= @user.email %></p>
      </h1>
    </section>
  </aside>
  <div class="col-xs-8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>